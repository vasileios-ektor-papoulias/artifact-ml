{
    "data": {
        "training_dataset_path": "assets/binary_classification.csv",
        "val_data_proportion": 0.2,
        "ls_features": ["weight", "height", "age", "bmi"],
        "label_feature": "arthritis_true",
        "ls_class_names": ["0", "1"],
        "positive_class_name": "1"
    },
    "architecture": {
        "ls_hidden_sizes": [
            512,
            256
        ],
        "latent_dim": 128,
        "leaky_relu_slope": 0.1,
        "bn_momentum": 0.1,
        "bn_epsilon": 1e-5,
        "dropout_rate": 0
    },
    "training": {
        "device": "cpu",
        "max_n_epochs": 50,
        "learning_rate": 0.001,
        "batch_size": 64,
        "drop_last": false,
        "shuffle": true,
        "checkpoint_period": 5
    },
    "validation": {
        "train_diagnostics_period": 1,
        "loader_validation_period": 5,
        "artifact_routine_period": 5,
        "classification_threshold": 0.5
    },
    "tracking":{
        "experiment_id": "demo"
    }
}